<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#FF2C2C2C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/word_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/settings_button1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/transparent_button_background"
            android:src="@drawable/ic_settings"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:contentDescription="Settings"
            android:tint="@color/widget_button_color" />
    </LinearLayout>

    <TextView
        android:id="@+id/meaning_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:textColor="#E0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:background="@drawable/transparent_button_background"
            android:src="@drawable/ic_settings"
            android:scaleType="fitCenter"
            android:contentDescription="Refresh words" />

        <TextView
            android:id="@+id/word_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#9E9E9E" />

        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:background="@drawable/transparent_button_background"
            android:src="@drawable/ic_arrow_right"
            android:scaleType="fitCenter"
            android:contentDescription="Next word" />
    </LinearLayout>

</LinearLayout>